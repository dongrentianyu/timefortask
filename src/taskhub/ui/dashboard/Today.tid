list-after: $:/plugins/mabuqian/TaskHub/ui/dashboard/InboxAndProjects
tags: $:/plugins/mabuqian/TaskHub/tags/dashboard
title: $:/plugins/mabuqian/TaskHub/ui/dashbaord/Today

\define lingo-base() $:/language/TaskHub/

<$let
  today=<<now "YYYY-0MM-0DD">>
>
<$vars showProjectLinks="yes">
  <$list
  filter="[all[tiddlers]tmo[Task]tmo_taskState[todo]has[tmo_dueDate]get[tmo_dueDate]match<today>]"
  emptyMessage={{$:/plugins/mabuqian/TaskHub/ui/welcome/EmptyProjects}}>
    <dl>
      <dt><<lingo Today>></dt>
      <dd>
      <$list
      filter="[all[tiddlers]tmo[Task]tmo_taskState[todo]has[tmo_dueDate]] :filter[get[tmo_dueDate]match<today>]"
      template="$:/plugins/mabuqian/TaskHub/ui/todo/TodoItem"
      />
      </dd>
    </dl>
  </$list>
  </$vars>
</$let>