.TH-category-pill {
  position: relative;
  width: 1em;
  height: 1em;
  display: inline-block;
  vertical-align: middle;
  border-radius: 50%;
  background: <<colour tiddler-background>>;
}

.TH-category-pill::after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  border: 1px solid <<colour muted-foreground>>;
}

.TH-category-wrapper {
  margin-top: -4px;
  margin-bottom: 10px;
}
