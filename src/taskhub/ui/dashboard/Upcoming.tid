caption: {{$:/plugins/mabuqian/TaskHub/images/calendar-checked}} {{$:/language/TaskHub/Upcoming}}
list-after: $:/plugins/mabuqian/TaskHub/ui/dashbaord/Today
tags: $:/plugins/mabuqian/TaskHub/tags/dashboard
title: $:/plugins/mabuqian/TaskHub/ui/dashbaord/Upcoming

\define lingo-base() $:/language/TaskHub/

<$vars showProjectLinks="yes">
  <$list
    filter=<<TH-has-scheduled-todos-in-projects>>
    emptyMessage={{$:/plugins/mabuqian/TaskHub/ui/welcome/EmptyUpcoming}}
  >
    <$list filter=<<TH-has-overdue-todos>>>
      <dl>
	<dt><<lingo Overdue>></dt>
	<dd><<TH-schedule-overdue>></dd>
      </dl>
    </$list>

    <$list filter=<<TH-upcoming-due-dates>>>
      <dl>
	<dt>{{||$:/plugins/mabuqian/TaskHub/ui/dashboard/Date}}</dt>
	<dd><$transclude $variable="TH-schedule-day" day={{!!due}}/></dd>
      </dl>
    </$list>
  </$list>
</$vars>
