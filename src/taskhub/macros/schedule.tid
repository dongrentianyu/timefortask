\define TH-schedule-overdue()
  <$list
    filter=<<TH-todos-overdue>>
    template="$:/plugins/mabuqian/TaskHub/ui/todo/TodoItem"
  />
\end

\define TH-schedule-day(day)
  <$vars day=<<day>>>
    <$list
      filter=<<TH-todos-due-on>>
      template="$:/plugins/mabuqian/TaskHub/ui/todo/TodoItem"
      />
  </$vars>
\end

